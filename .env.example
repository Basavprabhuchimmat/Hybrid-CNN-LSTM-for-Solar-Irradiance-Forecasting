# Solar Forecasting API Configuration
# Copy this file to .env and update values as needed

# API Settings
APP_NAME="Solar Forecasting API"
APP_VERSION="1.0.0"
DEBUG=False
HOST=127.0.0.1
PORT=5000

# CORS Settings - IMPORTANT: Update with your frontend domain in production
CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:5000"]

# File Upload Settings
UPLOAD_FOLDER=uploads
MAX_UPLOAD_SIZE=10485760
MAX_SEQUENCE_IMAGES=100
MIN_SEQUENCE_IMAGES=10

# Model Paths
CNN_MODEL_PATH=models/best_efficientnet_model.pth
LSTM_MODEL_PATH=models/best_lstm_model.pth
HYBRID_MODEL_PATH=models/best_hybrid_model.pth

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# Gemini API (if using AI features)
# GEMINI_API_KEY=your_api_key_here
# GEMINI_MODEL=gemini-1.5-flash
